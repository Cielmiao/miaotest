page{
  height: 100%;
  background-color: #b3d4db;
}
.container{
  display: flex;
  flex-direction:column;
  align-items: center;
}
.user-img{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-top: 160rpx;
}
.user-name{
  margin-top: 100rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.txt-box{
  margin-top: 200rpx;
  width: 200rpx;
  height: 80rpx;
  border: 1px solid #405f80;
  border-radius: 10rpx;
  text-align: center;
}
.txt{
  font-size: 28rpx;
  line-height: 80rpx;
  color: #405f80;
}
